{
	"compilerOptions": {
		"target": "es6",
		"lib": ["dom", "dom.iterable", "esnext", "es2015"],
		"declaration": true,
		"module": "es6",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"sourceMap": true,
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist/"
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/__tests__/*"]
}
